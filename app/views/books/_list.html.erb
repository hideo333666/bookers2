<h2 class="mt-3">New book</h2>

<%= form_with model: book, local:true do |f| %>
<div class="form-group">
  <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
</div>

<div class="form-group">
  <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %><br>
</div>

<div class="form-group">
  <%= f.submit "create Book" %>
</div>
<% end %>