


<%= render 'books/list', book: @new_book %>

<div class="col-md-8" "offset-md-1">
  <h2>Book detail</h2>
  <% @book %>
  <table>
    <thead>
      <tr>
        <th>
        </th>
        
        <th><%= link_to book_path(@book.id) do %>
            <%= @book.title %>
            <% end %>
        </th>
        
        <th><%= @book.body %></th>
        <th><% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
        </th>
      </tr>
    </thead>
  </table>
</div>
